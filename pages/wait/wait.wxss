.wait-page { min-height: 100vh; display: flex; align-items: center; justify-content: center; background: linear-gradient(180deg,#FFFFFF 0%, #F3F7FC 100%); padding: 12px; box-sizing: border-box; }
.card { width: 100%; height: calc(100vh - 24px); background: #FFFFFF; border-radius: 24px; box-shadow: 0 12px 24px rgba(31,42,55,0.08); display: flex; flex-direction: column; align-items: center; justify-content: center; gap: 16px; }
.spinner { width: 64px; height: 64px; border-radius: 50%; border: 6px solid #FF7A3E; border-top-color: transparent; animation: spin 1.2s linear infinite; }
.title { font-size: 18px; color: #1F2A37; font-weight: 600; }
.subtitle { font-size: 14px; color: #9AA4B2; }
.subtitle.error { color: #FF4D4F; }
@keyframes spin { to { transform: rotate(360deg) } }
