/* 页面背景与容器 */
.chat-page {
  background: #eeece5;
  min-height: 100vh;
}

.fixed-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background: #eeece5;
  padding: 16px;
  height: 180px;
  padding-right: 88px;
  box-sizing: border-box;
}

/* 头部 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.header-texts {
  display: flex;
  flex-direction: column;
}
.greeting {
  font-size: 26px;
  color: #e59143;
  font-weight: 400;
}
.subtext {
  margin-top: 6px;
  font-size: 16px;
  color: #e59143;
}
.header-illustration {
  position: absolute;
  right: 30px;
  top: 2px;
}
.avatar-image {
  width: 160px;
  height: 200px;
  border-radius: 12px;
}

/* 中部可滚动区域 */
.chat-scroll {
  height: 100vh;
  padding: 165px 12px 88px;
  box-sizing: border-box;
}
.chat-scroll.no-pills { padding-bottom: 100px; }

/* 气泡与标签 */
.messages { display: flex; flex-direction: column; gap: 8px; }
.end-anchor { height: 6px; }

/* CTA 样式 */
.cta-wrap { display: flex; flex-direction: column; align-items: center; gap: 8px; margin-top: 12px; }
.cta-btn { background: #000000; color: #FFFFFF; border-radius: 999px; padding: 12px 24px; display: flex; align-items: center; justify-content: center; box-shadow: 0 6px 12px rgba(0,0,0,0.15); min-width: 260px; white-space: nowrap; gap: 8px; }
.cta-btn .gift-icon { margin-right: 8px; }
.cta-btn .btn-text { font-weight: 600; white-space: nowrap; }
.cta-caption { font-size: 12px; color: #9AA4B2; }
.bubble {
  background: #FFFFFF;
  border-radius: 14px;
  padding: 14px;
  margin-top: 14px;
  color: #1F2A37;
  line-height: 1.6;
  box-shadow: 0 4px 10px rgba(31,42,55,0.06);
  max-width: 82%;
}
.left { margin-right: 56px; }
.right { margin-left: auto; }

/* 气泡角样式：机器人左下角为直角 */
.bubble.left {
  border-bottom-left-radius: 0;
}

/* 气泡角样式：用户右下角为直角，且颜色为 #FF6B36 */
.bubble.right {
  background: #FF6B36;
  color: #FFFFFF;
  border-bottom-right-radius: 0;
}

.budget-pill {
  margin: 12px 0 0 auto;
  background: #FF7A3E;
  color: #FFFFFF;
  padding: 8px 12px;
  border-radius: 999px;
  width: fit-content;
  box-shadow: 0 4px 10px rgba(255, 122, 62, 0.3);
}

/* 底部固定区域 */
.fixed-footer {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0px;
  background: transparent;
  padding: 8px 12px 8px;
  box-sizing: border-box;
  z-index: 10;
}
.fixed-footer.no-pills .footer-bg { top: 8px; }

.footer-bg {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  top: 2px;
  background: #eeece5;
  border-top: 1px solid rgba(31,42,55,0.06);
  border-bottom: 0;
  z-index: 0;
}

/* 次级操作 */
.secondary-actions {
  position: relative;
  z-index: 2;
  display: flex;
  gap: 2px;
  margin-top: 0px;
  margin-bottom: 12px;
}
.history-pills { justify-content: flex-start; }
.pill {
  display: flex;
  align-items: center;
  gap: 6px;
  padding: 10px 12px;
  border-radius: 999px;
  background: #FFFFFF;
  box-shadow: 0 2px 8px rgba(31,42,55,0.06);
}
.pill.lite { padding: 2px 10px; box-shadow: 0 2px 8px rgba(31,42,55,0.08); }
.pill-icon { font-size: 16px; }
.pill-text { font-size: 14px; }
.pill-text.lite { font-size: 13px; color: #b6b8bb; }
.pill.blue { color: #4A7DFF; }
.pill.orange { color: #FF7A3E; }

/* 输入区域 */
.input-area {
  position: relative;
  z-index: 1;
  margin-top: 4px;
  display: flex;
  align-items: center;
  width: 100%;
}
.toggle-btn {
  position: absolute;
  left: 6px;
  top: 50%;
  transform: translateY(-50%);
  width: 36px;
  height: 36px;
  border-radius: 50%;
  background: transparent;
  border: none;
  box-shadow: none;
  display: flex;
  align-items: center;
  justify-content: center;
}
.toggle-icon { font-size: 14px; color: #b6b8bb; }
.voice-input {
  flex: 1;
  height: 46px;
  border-radius: 999px;
  background: #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #1F2A37;
  font-weight: 600;
  box-shadow: none;
  border: none;
}
.voice-input.recording { background: #FF7A3E; color: #FFFFFF; box-shadow: none; }
.input {
  flex: 1;
  background: #FFFFFF;
  border-radius: 999px;
  height: 30px;
  padding: 8px 42px 8px 44px;
  font-size: 16px;
  color: #7A8CA5;
  box-shadow: none;
  border: none;
}
.send-btn {
  width: 36px;
  height: 36px;
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  right: 6px;
  top: 50%;
  transform: translateY(-50%);
}
.intro-send { position: absolute; right: 6px; top: 50%; transform: translateY(-50%); }
.header-texts {
  display: flex;
  flex-direction: column;
  margin-left: 16px;
  margin-top: 16px;
}
.typing { display: flex; align-items: center; gap: 6px; }
.dot { width: 6px; height: 6px; border-radius: 50%; background: rgba(31,42,55,0.6); animation: blink 1.2s infinite; }
.dot:nth-child(2) { animation-delay: 0.2s; }
.dot:nth-child(3) { animation-delay: 0.4s; }
@keyframes blink { 0% { opacity: 0.2 } 50% { opacity: 1 } 100% { opacity: 0.2 } }
/* 首屏输入层 */
.intro-layer {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: #eeece5;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  z-index: 20;
}
.intro-bg { position: absolute; left: 0; right: 0; top: 0; width: 100%; height: 50vh; z-index: 0; pointer-events: none; }
.intro-container { width: 98vw; min-height: 100vh; position: relative; margin: 0 auto; }
.intro-center { position: absolute; left: 0; right: 0; top: 58%; transform: translateY(-50%); display: flex; flex-direction: column; align-items: center; gap: 0; }
.intro-center { padding: 0 12px; }
.intro-above { display: none; }
.intro-hero { position: absolute; left: 0; right: 0; top: 0; height: 46vh; background: none; display: flex; flex-direction: column; justify-content: center; padding: 24px; box-sizing: border-box; }
.intro-hero { justify-content: flex-start; padding-top: 60px; }
.hero-line { color: #FFFFFF; font-size: 40px; font-weight: 400; line-height: 1.4; text-shadow: 0 2px 8px rgba(0,0,0,0.12); }
.prompt-line { margin-bottom: 8px; display: flex; align-items: baseline; justify-content: center; }
.prompt-text { color: #e59143; font-size: 18px; font-weight: 400; }
.intro-card {
  width: 100%;
  height: 20px;
  background: #FFFFFF;
  border-radius: 24px;
  box-shadow: 0 8px 20px rgba(31,42,55,0.10);
  border: none;
  position: relative;
  box-sizing: border-box;
  z-index: 1;
}
.quick-caps { margin-top: 10px; display: flex; gap: 8px; flex-wrap: wrap; }
.cap { padding: 5px 9px; border-radius: 999px; background: #FFFFFF; color: #b6b8bb; font-size: 16px; box-shadow: 0 2px 6px rgba(31,42,55,0.08); display: inline-flex; align-items: center; justify-content: center; }
.quick-caps-out { margin-top: 12px; display: flex; justify-content: flex-start; gap: 14px; }
.quick-caps-out .cap { display: inline-flex; width: 70px; min-width: 0; text-align: center; }
.intro-banner {
  width: 100%;
  height: 200px;
  border-radius: 18px;
  overflow: hidden;
  background: #FFFFFF;
  box-shadow: 0 6px 16px rgba(31,42,55,0.06);
  border: 2px solid #E0E7FF;
  box-sizing: border-box;
}
.intro-banner swiper { width: 100%; height: 100%; }
.banner-image { width: 100%; height: 100%; }
.discount-card {
  margin: 0 2px;
  width: calc(100% - 20px);
  display: flex;
  align-items: center;
  gap: 10px;
  background: #FFF3E8;
  border-radius: 16px;
  padding: 10px 12px;
}
.discount-icon { font-size: 18px; }
.discount-text { flex: 1; color: #1F2A37; font-size: 14px; overflow: hidden; white-space: nowrap; text-overflow: ellipsis; }
.discount-action { color: #FF7A3E; font-weight: 600; }
.intro-input {
  width: 100%;
  height: 92px;
  background: #FFFFFF;
  border-radius: 16px;
  box-shadow: inset 0 0 0 1px #E6ECF3;
  padding: 12px 14px;
  color: #7A8CA5;
}
.intro-actions {
  position: absolute;
  right: 12px;
  bottom: 12px;
  display: flex;
  gap: 10px;
}
.intro-btn {
  width: 36px;
  height: 36px;
  border-radius: 50%;
  background: #F2F4F7;
  display: flex;
  align-items: center;
  justify-content: center;
}
.intro-icon { color: #9AA4B2; }
.history-scroll { width: 100%; overflow: hidden; position: relative; z-index: 2; }
.history-pills { justify-content: flex-start; width: max-content; }
.toggle-img { width: 18px; height: 18px; }
.send-img { width: 18px; height: 18px; }

/* 商品卡片横向选择 */
.prod-hint { font-size: 12px; color: #9AA4B2; margin: 4px 0 0 8px; }
.prod-list { margin-top: 8px; height: 360px; }
.prod-list swiper-item { display: flex; align-items: center; }
.prod-card {
  width: 294px;
  height: 355px;
  background: #FFFFFF;
  border: 1px solid #E6ECF3;
  border-radius: 18px;
  position: relative;
  box-shadow: 0 8px 20px rgba(31,42,55,0.10);
  transform: scale(0.9);
  transform-origin: center;
  transition: transform .25s ease, box-shadow .25s ease;
  z-index: 1;
  margin: 0 auto;
  overflow: hidden;
}
.prod-card.selected { transform: scale(1); box-shadow: 0 12px 24px rgba(31,42,55,0.16); z-index: 2; }
.header-band { position: relative; height: 90px; }
.band-bg { position: absolute; left: 0; right: 0; top: 0; bottom: 0; width: 100%; height: 100%; z-index: 0; }
.band-texts { position: relative; z-index: 3; width: 100%; height: 100%; display: flex; flex-direction: column; align-items: center; justify-content: center; padding: 6px; box-sizing: border-box; }
.band-title { color: #e59143; font-weight: 700; font-size: 20px; text-align: center; white-space: normal; word-break: break-word; overflow-wrap: anywhere; }
.band-sub { color: #e59143; font-size: 14px; margin-top: 2px; text-align: center; white-space: normal; word-break: break-word; overflow-wrap: anywhere; }
.image-area { position: absolute; left: 0; right: 0; bottom: 0; height: 257px; z-index: 2; }
.card-image { position: absolute; left: 0; right: 0; bottom: 0; width: 100%; height: 257px; background: #F7F7F7; }
.card-actions { display: flex; align-items: center; justify-content: flex-start; padding: 10px; }
.pill-btn { border: 2px solid #FF7A3E; color: #FF7A3E; border-radius: 999px; padding: 6px 12px; font-size: 13px; background: #FFFFFF; box-shadow: 0 2px 8px rgba(31,42,55,0.12); }
.pill-btn.overlay { position: absolute; left: 10px; bottom: 24px; }

/* 轻操作 */
.light-actions { margin-top: 8px; display: flex; gap: 8px; justify-content: space-between; }
.light-btn { flex: 1; border-radius: 999px; padding: 8px 10px; font-size: 13px; }
.light-btn.orange { background: #FF7A3E; color: #FFFFFF; border: none; }
.light-btn.gray { background: #F4F6F8; color: #1F2A37; border: none; }
.light-btn.outline { background: #FFFFFF; color: #FF7A3E; border: 1px solid #FF7A3E; }
