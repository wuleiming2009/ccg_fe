/* 页面背景与容器 */
.chat-page {
  background: #F0F5FB;
  min-height: 100vh;
}

.fixed-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background: #F0F5FB;
  padding: 16px;
  height: 96px;
  padding-right: 88px;
  box-sizing: border-box;
}

/* 头部 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.header-texts {
  display: flex;
  flex-direction: column;
}
.greeting {
  font-size: 24px;
  color: #1F2A37;
  font-weight: 700;
}
.subtext {
  margin-top: 6px;
  font-size: 14px;
  color: #7A8CA5;
}
.header-illustration {
  position: absolute;
  right: 30px;
  top: 2px;
}
.avatar-image {
  width: 120px;
  height: 120px;
  border-radius: 12px;
}

/* 中部可滚动区域 */
.chat-scroll {
  height: 100vh;
  padding: 126px 16px 140px;
  box-sizing: border-box;
}
.chat-scroll.no-pills { padding-bottom: 100px; }

/* 气泡与标签 */
.messages { display: flex; flex-direction: column; gap: 8px; }
.end-anchor { height: 6px; }

/* CTA 样式 */
.cta-wrap { display: flex; flex-direction: column; align-items: center; gap: 8px; margin-top: 12px; }
.cta-btn { background: #000000; color: #FFFFFF; border-radius: 999px; padding: 12px 24px; display: flex; align-items: center; justify-content: center; box-shadow: 0 6px 12px rgba(0,0,0,0.15); min-width: 260px; white-space: nowrap; gap: 8px; }
.cta-btn .gift-icon { margin-right: 8px; }
.cta-btn .btn-text { font-weight: 600; white-space: nowrap; }
.cta-caption { font-size: 12px; color: #9AA4B2; }
.bubble {
  background: #FFFFFF;
  border-radius: 14px;
  padding: 14px;
  margin-top: 14px;
  color: #1F2A37;
  line-height: 1.6;
  box-shadow: 0 4px 10px rgba(31,42,55,0.06);
  max-width: 82%;
}
.left { margin-right: 56px; }
.right { margin-left: auto; }

/* 气泡角样式：机器人左下角为直角 */
.bubble.left {
  border-bottom-left-radius: 0;
}

/* 气泡角样式：用户右下角为直角，且颜色为 #FF6B36 */
.bubble.right {
  background: #FF6B36;
  color: #FFFFFF;
  border-bottom-right-radius: 0;
}

.budget-pill {
  margin: 12px 0 0 auto;
  background: #FF7A3E;
  color: #FFFFFF;
  padding: 8px 12px;
  border-radius: 999px;
  width: fit-content;
  box-shadow: 0 4px 10px rgba(255, 122, 62, 0.3);
}

/* 底部固定区域 */
.fixed-footer {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 12px;
  background: transparent;
  padding: 12px 16px 16px;
  box-sizing: border-box;
  z-index: 10;
}
.fixed-footer.no-pills .footer-bg { top: 8px; }

.footer-bg {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  top: 18px;
  background: #F0F5FB;
  border-top: 1px solid rgba(31,42,55,0.06);
  border-bottom: 0;
}

/* 次级操作 */
.secondary-actions {
  position: relative;
  z-index: 1;
  display: flex;
  gap: 10px;
  margin-top: 16px;
}
.pill {
  display: flex;
  align-items: center;
  gap: 6px;
  padding: 10px 12px;
  border-radius: 999px;
  background: #FFFFFF;
  box-shadow: 0 2px 8px rgba(31,42,55,0.06);
}
.pill-icon { font-size: 16px; }
.pill-text { font-size: 14px; }
.pill.blue { color: #4A7DFF; }
.pill.orange { color: #FF7A3E; }

/* 输入区域 */
.input-area {
  position: relative;
  z-index: 1;
  margin-top: 12px;
  display: flex;
  align-items: center;
  gap: 10px;
}
.input {
  flex: 1;
  background: #FFFFFF;
  border-radius: 999px;
  padding: 10px 14px;
  font-size: 14px;
  color: #7A8CA5;
}
.send-btn {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background: #8b8b8b;
  display: flex;
  align-items: center;
  justify-content: center;
}
.send-icon { color: #FFFFFF; }
.header-texts {
  display: flex;
  flex-direction: column;
  margin-left: 16px;
  margin-top: 16px;
}
.typing { display: flex; align-items: center; gap: 6px; }
.dot { width: 6px; height: 6px; border-radius: 50%; background: rgba(31,42,55,0.6); animation: blink 1.2s infinite; }
.dot:nth-child(2) { animation-delay: 0.2s; }
.dot:nth-child(3) { animation-delay: 0.4s; }
@keyframes blink { 0% { opacity: 0.2 } 50% { opacity: 1 } 100% { opacity: 0.2 } }
