page, .invite-page { background: #eeece5; min-height: 100vh; }
.hero { padding: 24px 16px; text-align: center; }
.title-en { font-size: 12px; color: #9AA4B2; letter-spacing: 2px; }
.main-title { margin-top: 8px; display: flex; flex-direction: column; gap: 4px; }
.main-title text { font-size: 20px; color: #1F2A37; font-weight: 700; }
.note { margin-top: 10px; font-size: 12px; color: #7A8CA5; }
.notes { margin-top: 6px; display: flex; flex-direction: column; gap: 2px; align-items: center; }
.form { margin-top: 8px; padding: 12px 16px; }
.field { margin-top: 12px; }
.label { font-size: 12px; color: #9AA4B2; letter-spacing: 1px; }
.input { margin-top: 6px; background: #FFFFFF; border: 1px solid #E6ECF3; border-radius: 12px; padding: 10px 12px; box-shadow: 0 2px 6px rgba(31,42,55,0.06); }
.submit { margin-top: 16px; width: 100%; background: #FF7A3E; color: #FFFFFF; border-radius: 999px; padding: 12px 18px; font-weight: 600; }
.ph { font-size: 12px; color: #9AA4B2; }
.smart-card { background: #FFFFFF; border: 1px solid #E6ECF3; border-radius: 16px; padding: 12px; box-shadow: 0 2px 8px rgba(31,42,55,0.06); }
.smart-textarea { width: 100%; min-height: 72px; background: #FFFFFF; border: 1px solid #E6ECF3; border-radius: 12px; padding: 10px 12px; box-sizing: border-box; color: #1F2A37; font-size: 14px; }
.smart-row { margin-top: 8px; display: flex; justify-content: flex-start; align-items: center; }
.sticky-btn { background: #FF7A3E; color: #FFFFFF; border-radius: 999px; padding: 8px 14px; font-size: 12px; align-self: flex-start; }
.pill-group { display: flex; align-items: center; gap: 6px; background: #FFFFFF; border: 1px solid #E6ECF3; border-radius: 999px; padding: 6px 10px; }
.pill-item { color: #7A8CA5; font-size: 12px; }
.divider { color: #E3E8EF; }
.sticky-btn { background: #FF7A3E; color: #FFFFFF; border-radius: 999px; padding: 8px 14px; font-size: 12px; }
.wx-address-btn { margin-top: 12px; width: auto; background: #07C160; color: #FFFFFF; border-radius: 999px; padding: 6px 10px; font-weight: 600; font-size: 12px; align-self: flex-start; margin-left: 0; margin-right: auto; }
