.history-page { min-height: 100vh; background: #eeece5; padding: 12px; box-sizing: border-box; }
.card { background: #FFFFFF; border-radius: 16px; box-shadow: 0 8px 16px rgba(31,42,55,0.08); padding: 16px; }
.card.empty { display: flex; flex-direction: column; align-items: center; gap: 8px; }
.icon { width: 64px; height: 64px; border-radius: 12px; }
.primary { font-size: 16px; font-weight: 600; color: #1F2A37; }
.hint { font-size: 13px; color: #7A8CA5; }

.list { display: flex; flex-direction: column; gap: 12px; }
.item-top { display: flex; gap: 12px; }
.thumb { width: 80px; height: 80px; border-radius: 10px; background: #E8EEF5; }
.meta { flex: 1; }
.row { display: flex; justify-content: space-between; align-items: center; }
.title { font-size: 15px; font-weight: 600; color: #1F2A37; max-width: 70%; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; }
.date { font-size: 12px; color: #9AA4B2; }
.price { margin-top: 2px; font-size: 14px; color: #FF4D4F; font-weight: 600; }
.preview { margin-top: 6px; font-size: 12px; color: #7A8CA5; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden; }
.divider { margin-top: 10px; height: 1px; background: #E6ECF3; border-radius: 1px; }
.actions { margin-top: 10px; display: flex; gap: 8px; }
.btn { flex: 1; border-radius: 999px; padding: 8px 12px; font-size: 14px; font-weight: 600; display: flex; align-items: center; justify-content: center; }
.btn.light { background: #F4F6F8; color: #1F2A37; }
.btn.orange { background: #FF7A3E; color: #FFFFFF; }
