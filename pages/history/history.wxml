<view class="history-page">
  <view class="header"></view>

  <block wx:if="{{empty}}">
    <view class="card empty">
      <image class="icon" src="" mode="aspectFit"></image>
      <text class="primary">暂无记录</text>
      <text class="hint">和顾问聊聊，生成你的第一份礼物清单吧。</text>
    </view>
  </block>

  <block wx:else>
    <view class="list">
      <view class="card item" wx:for="{{items}}" wx:key="match_id">
        <view class="item-top">
          <image class="thumb" src="{{item.thumb}}" mode="aspectFill"></image>
          <view class="meta">
            <view class="row">
              <text class="title">{{item.title}}</text>
              <text class="date">{{item.date}}</text>
            </view>
            <text class="price">¥{{item.price}}</text>
            <text class="preview">{{item.preview}}</text>
          </view>
        </view>
        <view class="divider"></view>
        <view class="actions">
          <button class="btn light" data-id="{{item.match_id}}" bindtap="onReview">回顾对话</button>
          <button class="btn orange" data-id="{{item.match_id}}" bindtap="onViewResult">查看结果</button>
        </view>
      </view>
    </view>
  </block>
</view>
