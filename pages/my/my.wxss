.my-page { background: #eeece5; min-height: 100vh; padding: 16px; }
.fixed-header { position: fixed; top: 0; left: 0; right: 0; background: #eeece5; padding: 16px; height: 180px; padding-right: 88px; box-sizing: border-box; }
.header { display: flex; align-items: center; justify-content: space-between; }
.header-texts { display: flex; flex-direction: column; margin-left: 16px; margin-top: 16px;}
.greeting { font-size: 26px; color: #e59143; font-weight: 400; }
.subtext { margin-top: 6px; font-size: 16px; color: #e59143; }
.header-illustration { position: absolute; right: 30px; top: 2px; }
.avatar-image { width: 160px; height: 160px; border-radius: 12px; }
.profile-card { margin-top: 210px; background: #FFFFFF; border-radius: 16px; box-shadow: 0 8px 16px rgba(31,42,55,0.08); padding: 12px; }
.card-top { display: flex; justify-content: space-between; align-items: center; }
.card-label { font-size: 12px; color: #9AA4B2; letter-spacing: 2px; }
.edit-pill { background: #FF7A3E; color: #FFFFFF; border-radius: 999px; padding: 6px 10px; }
.edit-text { font-size: 12px; }
.card-main { margin-top: 8px; display: flex; align-items: center; gap: 12px; }
.avatar-placeholder { width: 40px; height: 40px; border-radius: 50%; background: #000000; color: #FFFFFF; display: flex; align-items: center; justify-content: center; font-weight: 700; }
.name-info { display: flex; flex-direction: column; }
.member-name { font-size: 18px; color: #1F2A37; font-weight: 700; }
.member-tier { font-size: 12px; color: #9AA4B2; margin-top: 4px; }
.actions { margin-top: 16px; display: flex; flex-direction: column; gap: 12px; }
.big-btn { background: #FFFFFF; border-radius: 999px; padding: 14px 18px; display: flex; align-items: center; justify-content: center; gap: 8px; box-shadow: 0 2px 8px rgba(31,42,55,0.08); }
.big-btn-text { color: #1F2A37; font-size: 16px; }
.chev { color: #1F2A37; font-weight: 600; }
.chev.orange { color: #FF7A3E; }

.modal-mask { position: fixed; left: 0; right: 0; top: 0; bottom: 0; background: rgba(0,0,0,0.25); z-index: 999; }
.modal { position: fixed; left: 12px; right: 12px; top: 30%; background: #FFFFFF; border-radius: 16px; box-shadow: 0 12px 24px rgba(31,42,55,0.16); padding: 16px; z-index: 1000; }
.modal-title { font-size: 18px; font-weight: 700; color: #1F2A37; }
.modal-input { margin-top: 12px; height: 36px; background: #FFFFFF; border-radius: 999px; padding: 8px 12px; box-shadow: inset 0 0 0 1px #D8E2F0; color: #1F2A37; }
.modal-actions { margin-top: 12px; display: flex; gap: 8px; }
.modal-btn { flex: 1; border-radius: 999px; padding: 10px 14px; }
.modal-btn.light { background: #F4F6F8; color: #1F2A37; }
.modal-btn.dark { background: #FF7A3E; color: #FFFFFF; }
.name-input { flex: 1; height: 36px; background: #FFFFFF; border-radius: 999px; padding: 8px 12px; box-shadow: inset 0 0 0 1px #D8E2F0; color: #1F2A37; }
.save-btn { height: 36px; background: #FF7A3E; color: #FFFFFF; border-radius: 999px; padding: 0 16px; font-weight: 600; }
.actions { margin-top: 20px; display: flex; flex-direction: column; gap: 12px; }
.action-btn { background: #FFFFFF; color: #1F2A37; border-radius: 999px; padding: 12px 18px; box-shadow: 0 2px 8px rgba(31,42,55,0.08); }
.qr-img { margin-top: 12px; width: 100%; height: 240px; border-radius: 12px; background: #FFFFFF; }
