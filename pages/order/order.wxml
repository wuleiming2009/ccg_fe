<view class="order-page">
  <view class="card recipient-card">
    <view class="card-header">收礼人信息 / THE RECIPIENT</view>
    <view class="rec-row">
      <text class="rec-name">{{recipient.nickname}}</text>
      <text class="rec-phone">{{recipient.phone}}</text>
      <text class="rec-note">{{recipient.address}}</text>
    </view>
  </view>

  <view class="divider"></view>

  <view class="card product-card">
    <view class="card-header">选购礼赠 / THE WORK</view>
    <view class="prod-row">
      <image class="prod-thumb" src="{{product.img_url}}" mode="aspectFill"></image>
      <view class="prod-meta">
        <text class="prod-title">{{product.name}}</text>
        <view class="info-row">
          <text class="label">数量</text>
          <text class="value">{{quantity}}</text>
        </view>
        <view class="info-row">
          <text class="label">总计金额</text>
          <text class="value strong">¥{{amount_total}}</text>
        </view>
        <text class="status big">{{status_text}}</text>
      </view>
    </view>
    <view class="tail">
      <view class="tail-col">
        <text class="label">礼赠编号</text>
        <text class="mono">{{order_id}}</text>
      </view>
      <view class="tail-col">
        <text class="label">礼赠日期</text>
        <text>{{create_time}}</text>
      </view>
    </view>
    <button class="pay-btn" wx:if="{{order_status === 0 || status_text === '待支付'}}" bindtap="onPay">去支付</button>
  </view>
</view>
