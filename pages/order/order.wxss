.order-page { background: #eeece5; min-height: 100vh; padding: 16px; }
.card { background: #F7FAFF; border-radius: 16px; padding: 14px; box-shadow: 0 4px 12px rgba(31,42,55,0.06); }
.card + .divider { margin: 16px 0; height: 1px; background: #E6ECF3; }
.card-header { font-size: 12px; color: #9AA4B2; letter-spacing: 2px; margin-bottom: 10px; }
.rec-row { display: flex; flex-direction: column; gap: 6px; }
.rec-name { font-size: 24px; font-style: italic; color: #1F2A37; }
.rec-phone, .rec-note { font-size: 12px; color: #7A8CA5; }
.prod-row { display: flex; align-items: center; gap: 12px; position: relative; }
.prod-thumb { width: 96px; height: 96px; border-radius: 12px; background: #E5E7EB; }
.prod-meta { flex: 1; display: flex; flex-direction: column; gap: 8px; }
.prod-title { font-size: 18px; font-style: italic; color: #1F2A37; }
.info-row { display: flex; justify-content: space-between; }
.label { font-size: 12px; color: #9AA4B2; }
.value { font-size: 14px; color: #1F2A37; }
.value.strong { font-size: 16px; font-weight: 700; }
.status { font-size: 12px; color: #7A8CA5; }
.status.big { margin-top: 4px; font-size: 16px; font-weight: 600; color: #4B5563; }
.tail { margin-top: 12px; display: flex; justify-content: space-between; }
.tail-col { display: flex; flex-direction: column; gap: 4px; }
.mono { font-family: monospace; font-size: 13px; color: #1F2A37; }
.pay-btn { margin-top: 12px; width: 100%; background: #FF7A3E; color: #FFFFFF; border-radius: 10px; padding: 10px 14px; font-weight: 600; }
.invite-btn { margin-top: 12px; width: 100%; background: #FF7A3E; color: #FFFFFF; border-radius: 10px; padding: 10px 14px; font-weight: 600; }
