.result-page { min-height: 100vh; background: #eeece5; padding: 12px; box-sizing: border-box; }
.card { position: fixed; top: 12px; left: 12px; right: 12px; bottom: calc(12px + 64px + 6px); background: #FFFFFF; border-radius: 16px; box-shadow: 0 8px 16px rgba(31,42,55,0.08); padding: 12px; overflow: hidden; }
.inner-scroll { height: 100%; box-sizing: border-box; }
.header { display: flex; flex-direction: column; align-items: center; gap: 8px; padding: 12px; text-align: center; }
.success-icon { width: 36px; height: 36px; border-radius: 50%; background: #D7F2E4; color: #1F9D59; display: flex; align-items: center; justify-content: center; }
.title { font-size: 18px; font-weight: 700; color: #1F2A37; text-align: center; }
.subtitle { font-size: 14px; color: #9AA4B2; text-align: center; }
.reason { background: #F7FAFF; border-radius: 12px; padding: 12px; margin: 8px 12px; box-shadow: 0 6px 12px rgba(31,42,55,0.06); }
.reason-label { color: #7A8CA5; font-size: 13px; }
.quote { margin-top: 8px; color: #1F2A37; font-size: 14px; line-height: 1.6; }
.product { background: #FFFFFF; border-radius: 12px; padding: 12px; margin: 8px 12px; box-shadow: 0 6px 12px rgba(31,42,55,0.06); }
.image-wrap { position: relative; }
.image { width: 100%; height: 160px; border-radius: 12px; }
.image-tag { position: absolute; right: 8px; top: 8px; background: #EFF2F6; color: #1F2A37; font-size: 12px; padding: 4px 8px; border-radius: 999px; }
.row { display: flex; justify-content: space-between; align-items: center; margin-top: 8px; }
.prod-title { font-size: 16px; font-weight: 600; color: #1F2A37; }
.price { font-size: 14px; font-weight: 700; color: #FF7A3E; background: #FFE1D2; padding: 2px 8px; border-radius: 999px; }
.desc { margin-top: 6px; font-size: 13px; color: #7A8CA5; line-height: 1.6; }
.buy-btn { margin-top: 10px; width: 100%; background: #FF7A3E; color: #FFFFFF; border-radius: 10px; padding: 10px 14px; font-weight: 600; display: flex; align-items: center; justify-content: center; }
.bottom-actions { position: fixed; left: 0; right: 0; bottom: 12px; display: flex; gap: 12px; padding: 0 12px; box-sizing: border-box; height: 64px; align-items: center; }
.ai-note { display: block; margin: 8px 12px 0; text-align: center; color: #9AA4B2; font-size: 12px; }
.btn { flex: 1; border-radius: 999px; padding: 12px 18px; display: flex; align-items: center; justify-content: center; font-weight: 600; }
.btn.light { background: #FFFFFF; color: #1F2A37; border: 1px solid #E3E8EF; }
.btn.dark { background: #000000; color: #FFFFFF; }
