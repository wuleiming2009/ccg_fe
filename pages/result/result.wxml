<view class="result-page">
  <view class="card">
    <scroll-view class="inner-scroll" scroll-y="true" scroll-with-animation="true">
      <view class="header">
      <view class="success-icon">✔</view>
      <text class="title">匹配成功！</text>
      <text class="subtitle">根据您的回答，为您推荐这份礼物。</text>
      </view>

    <view class="reason">
      <text class="reason-label">💡 AI 推荐理由</text>
      <view class="quote">“{{reason}}”</view>
    </view>

      <view class="product">
      <view class="image-wrap">
        <image class="image" src="{{product.image}}" mode="aspectFill"></image>
        <text class="image-tag">{{product.tag}}</text>
      </view>
      <view class="row">
        <text class="prod-title">{{product.title}}</text>
        <text class="price">{{product.price}}</text>
      </view>
      <text class="desc">{{product.desc}}</text>
      <button class="buy-btn" bindtap="onBuy">去送礼</button>
      </view>
    </scroll-view>
  </view>

  <view class="bottom-actions">
    <button class="btn light" bindtap="onChangeGift">换个礼赠</button>
    <button class="btn dark" bindtap="onRestart">重新再来</button>
  </view>
</view>
